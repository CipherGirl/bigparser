{
  "type": "module",
  "name": "bigparser",
  "version": "1.0.0",
  "description": "BigParser API NPM Module",
  "license": "MIT",
  "repository": "intellibus/bigparser",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "bigparser",
    "grids"
  ],
  "scripts": {
    "build": "esbuild index.ts --outdir=dist --platform=node --sourcemap=external --target=node14 --format=cjs & tsc",
    "prepublish": "pnpm run build",
    "format": "prettier --write ./**/*.ts",
    "lint": "eslint ./**/*.ts -f mo",
    "lint:fix": "eslint --fix ./**/*.ts -f mo",
    "test": "DOTENV_CONFIG_PATH=./.env.test.local jest --runInBand",
    "test:coverage": "DOTENV_CONFIG_PATH=./.env.test.local jest --coverage --runInBand",
    "test:ci": "DOTENV_CONFIG_PATH=./.env.test.local jest --ci --coverage --runInBand",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^0.26.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/types": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.28",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-mo": "^1.1.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:node/recommended",
      "plugin:promise/recommended",
      "airbnb-base",
      "airbnb-typescript/base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "project": [
        "./tsconfig.json"
      ]
    },
    "ignorePatterns": [
      "./dist/**"
    ],
    "env": {
      "node": true
    },
    "overrides": [
      {
        "files": [
          "**/*.spec.ts"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "node/no-unpublished-import": "off"
        }
      },
      {
        "files": [
          "**/scripts/*.ts"
        ],
        "rules": {
          "no-console": "off"
        }
      }
    ],
    "rules": {
      "import/prefer-default-export": "off",
      "no-underscore-dangle": "off",
      "node/no-missing-import": [
        "error",
        {
          "tryExtensions": [
            ".ts",
            ".js",
            ".json"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "pretty-quick",
      "eslint --cache --fix ./**/*.ts -f mo"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 95
      }
    }
  }
}
